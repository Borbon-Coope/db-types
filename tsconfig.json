{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "types": ["node"],
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["**/*.ts"],
  "exclude": ["lib", "node_modules"]
}
